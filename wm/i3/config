# run i3-config-wizard to generate new config
# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Set main modifier key
set $mod Mod4

# Font for window titles. Will also be used by the bar unless specified
font pango:JetbrainsMono Nerd Font Bold 12

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
# font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id /usr/libexec/polkit-mate-authentication-agent-1
exec --no-startup-id picom --config /home/mingfei/.config/picom/picom.conf
exec --no-startup-id nitrogen --restore
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xfce4-clipman
exec --no-startup-id conky -c ~/.config/conky/conky.conf
exec --no-startup-id blueman-applet
exec --no-startup-id powermode-indicator
exec --no-startup-id xfconf-query -c xfce4-power-manager -p /xfce4-power-manager/show-tray-icon -t bool -s true

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

## Audio control keybindings (pactl)
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status && notify-send -r 9999 "  Volume: $(pactl get-sink-volume @DEFAULT_SINK@ | awk -F'/' '{print $2}' | head -n1)"
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status && notify-send -r 9999 " Volume: $(pactl get-sink-volume @DEFAULT_SINK@ | awk -F'/' '{print $2}' | head -n1)"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status && ( pactl get-sink-mute @DEFAULT_SINK@ | grep -q "yes" && notify-send -r 9999 "  Audio Muted" || notify-send -r 9999 "  Audio Unmuted" )
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status && ( pactl get-source-mute @DEFAULT_SOURCE@ | grep -q yes && notify-send -r 10000 "  Mic Muted" || notify-send -r 10000 "  Mic Unmuted" )

